# Production Environment Variables
# Copy this file to .env.production and adjust URLs for your production server

VITE_API_URL=https://api.yourdomain.com
VITE_APP_URL=https://app.yourdomain.com

# --------------------------
# STRIPE CONFIGURATION
# --------------------------

# Stripe Mode: test or live
VITE_STRIPE_MODE=test

# Stripe Test Mode Public Key (get from https://dashboard.stripe.com/test/apikeys)
VITE_STRIPE_TEST_PK=

# Stripe Live Mode Public Key (get from https://dashboard.stripe.com/apikeys)
# ⚠️ WARNING: For production, set VITE_STRIPE_MODE=live and provide live key
VITE_STRIPE_LIVE_PK=
