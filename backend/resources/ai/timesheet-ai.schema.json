{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://timeperk.local/schemas/timesheet-ai.schema.json",
  "title": "TimePerk Timesheet AI",
  "type": "object",
  "$defs": {
    "DateString": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "TimeString": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}$"
    },
    "IntentDateRange": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["absolute", "relative"]
        },
        "from": { "$ref": "#/$defs/DateString" },
        "to": { "$ref": "#/$defs/DateString" },
        "value": {
          "type": "string",
          "enum": ["this_week", "last_week", "next_week", "last_n_workdays"]
        },
        "count": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "ScheduleBlock": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "from": { "$ref": "#/$defs/TimeString" },
        "to": { "$ref": "#/$defs/TimeString" }
      },
      "additionalProperties": false
    },
    "ScheduleBlockAlt": {
      "type": "object",
      "required": ["start_time", "end_time"],
      "properties": {
        "start_time": { "$ref": "#/$defs/TimeString" },
        "end_time": { "$ref": "#/$defs/TimeString" }
      },
      "additionalProperties": false
    },
    "BreakBlock": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "from": { "$ref": "#/$defs/TimeString" },
        "to": { "$ref": "#/$defs/TimeString" }
      },
      "additionalProperties": false
    },
    "TimesheetIntent": {
      "type": "object",
      "required": ["intent", "missing_fields"],
      "properties": {
        "intent": { "type": "string" },
        "date_range": { "$ref": "#/$defs/IntentDateRange" },
        "schedule": {
          "type": "array",
          "items": { "$ref": "#/$defs/ScheduleBlock" }
        },
        "schedule_blocks": {
          "type": "array",
          "items": { "$ref": "#/$defs/ScheduleBlockAlt" }
        },
        "breaks": {
          "type": "array",
          "items": { "$ref": "#/$defs/BreakBlock" }
        },
        "project": { "type": "string" },
        "task": { "type": "string" },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "notes": { "type": "string" },
        "missing_fields": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "TimesheetPlan": {
      "type": "object",
      "required": ["range", "days"],
      "properties": {
        "range": {
          "type": "object",
          "required": ["start_date", "end_date"],
          "properties": {
            "start_date": { "$ref": "#/$defs/DateString" },
            "end_date": { "$ref": "#/$defs/DateString" }
          },
          "additionalProperties": false
        },
        "timezone": { "type": "string" },
        "days": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["date", "work_blocks", "breaks"],
            "properties": {
              "date": { "$ref": "#/$defs/DateString" },
              "work_blocks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["start_time", "end_time", "project", "task", "location"],
                  "properties": {
                    "start_time": { "$ref": "#/$defs/TimeString" },
                    "end_time": { "$ref": "#/$defs/TimeString" },
                    "project": {
                      "type": "object",
                      "required": ["id", "name"],
                      "properties": {
                        "id": { "type": ["integer", "null"] },
                        "name": { "type": ["string", "null"] }
                      },
                      "additionalProperties": false
                    },
                    "task": {
                      "type": "object",
                      "required": ["id", "name"],
                      "properties": {
                        "id": { "type": ["integer", "null"] },
                        "name": { "type": ["string", "null"] }
                      },
                      "additionalProperties": false
                    },
                    "location": {
                      "type": "object",
                      "required": ["id", "name"],
                      "properties": {
                        "id": { "type": ["integer", "null"] },
                        "name": { "type": ["string", "null"] }
                      },
                      "additionalProperties": false
                    },
                    "notes": { "type": ["string", "null"] }
                  },
                  "additionalProperties": false
                }
              },
              "breaks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["start_time", "end_time"],
                  "properties": {
                    "start_time": { "$ref": "#/$defs/TimeString" },
                    "end_time": { "$ref": "#/$defs/TimeString" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
